/dts-v1/;

#include "x1000.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/clock/ingenic,sysost.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/leds/common.h>

/ {
	model = "ZoomGo Media Stick";
	/*
	 * This device has Damai DM6291A SoC which reports as
	 * Ingenic X1000 IP, but with 256 MiB RAM.
	 */
	compatible = "zoomgo,zx10", "ingenic,x1000";

	aliases {
		serial2 = &uart2;
		led-boot = &led_status;
		led-failsafe = &led_status;
		led-running = &led_status;
		led-upgrade = &led_status;
	};

	chosen {
		bootargs = "earlycon";
		stdout-path = "serial2:115200n8";
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x10000000>;
	};

	leds {
		compatible = "gpio-leds";

		led_status: status {
			label = "green:status";
			gpios = <&gpc 26 GPIO_ACTIVE_LOW>;
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_STATUS;
			default-state = "keep";
		};
	};

	wlan_power: msc1-pwrseq {
		compatible = "mmc-pwrseq-simple";

		reset-gpios = <&gpc 17 GPIO_ACTIVE_LOW>;
		post-power-on-delay-ms = <200>;
	};

	reg_vcc5v0: vcc5v0 {
		compatible = "regulator-fixed";

		regulator-name = "vcc5v0";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	spi-flash {
		compatible = "spi-gpio";
		#address-cells = <1>;
		#size-cells = <0>;

		sck-gpios = <&gpa 26 GPIO_ACTIVE_HIGH>;
		miso-gpios = <&gpa 28 GPIO_ACTIVE_HIGH>;
		mosi-gpios = <&gpa 29 GPIO_ACTIVE_HIGH>;
		cs-gpios = <&gpa 27 GPIO_ACTIVE_LOW>;
		num-chipselects = <1>;

		flash@0 {
			compatible = "jedec,spi-nor";
			reg = <0>;
			spi-max-frequency = <12000000>;

			partitions {
				compatible = "fixed-partitions";
				#address-cells = <1>;
				#size-cells = <1>;

				partition@0 {
					label = "bootloader";
					reg = <0x000000 0x030000>;
					read-only;
				};

				partition@30000 {
					label = "config";
					reg = <0x030000 0x010000>;
					read-only;

					compatible = "nvmem-cells";
					#address-cells = <1>;
					#size-cells = <1>;

					macaddr_wlan: macaddr@ca0 {
						reg = <0xca0 0x6>;
					};
				};

				/*
				 * Last 32B must be a MD5 sum of first 256KiB.
				 * It's checked by U-Boot. If it fails, the
				 * kernel from backup partition is executed.
				 */
				partition@40000 {
					label = "kernel";
					reg = <0x040000 0x200000>;
				};

				partition@240000 {
					label = "rootfs";
					reg = <0x240000 0x800000>;
				};

				partition@a40000 {
					label = "backup";
					reg = <0xa40000 0x5b0000>;
					read-only;
				};

				partition@ff0000 {
					label = "airdisk";
					reg = <0xff0000 0x010000>;
				};
			};
		};
	};
};

&cgu {
	/*
	 * Use the 32.768 kHz oscillator as the parent of the RTC for a higher
	 * precision.
	 */
	assigned-clocks = <&cgu X1000_CLK_RTC>;
	assigned-clock-parents = <&cgu X1000_CLK_RTCLK>;
};

&exclk {
	clock-frequency = <24000000>;
};

&msc0 {
	status = "okay";

	bus-width = <8>;
	max-frequency = <50000000>;

	pinctrl-names = "default";
	pinctrl-0 = <&pins_msc0>;

	cd-gpios = <&gpc 21 GPIO_ACTIVE_LOW>;
};

&msc1 {
	status = "okay";

	#address-cells = <1>;
	#size-cells = <0>;
	bus-width = <4>;
	max-frequency = <50000000>;

	pinctrl-names = "default";
	pinctrl-0 = <&pins_msc1>;

	non-removable;

	mmc-pwrseq = <&wlan_power>;

	wifi@0 {
		compatible = "brcm,bcm4329-fmac";
		reg = <1>;

		interrupt-parent = <&gpc>;
		interrupts = <16 IRQ_TYPE_EDGE_FALLING>;
		interrupt-names = "host-wake";

		brcm,drive-strength = <10>;

		nvmem-cells = <&macaddr_wlan>;
		nvmem-cell-names = "mac-address";
	};
};

&ost {
	/* 1500 kHz for the system timer and clocksource */
	assigned-clocks = <&ost OST_CLK_PERCPU_TIMER>, <&ost OST_CLK_GLOBAL_TIMER>;
	assigned-clock-rates = <1500000>, <1500000>;
};

&otg_phy {
	status = "okay";

	vcc-supply = <&reg_vcc5v0>;
};

&otg {
	status = "okay";

	usb-role-switch;
};

&pinctrl {
	pins_uart2: uart2 {
		function = "uart2";
		groups = "uart2-data-d";
		bias-pull-up;
	};

	pins_msc0: msc0 {
		function = "mmc0";
		groups = "mmc0-1bit", "mmc0-4bit", "mmc0-8bit";
		bias-disable;
	};

	pins_msc1: msc1 {
		function = "mmc1";
		groups = "mmc1-1bit", "mmc1-4bit";
		bias-disable;
	};
};

&rng {
	status = "okay";
};

&uart2 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&pins_uart2>;
};
